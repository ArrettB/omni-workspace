<project name="iFrame Hack" default="jar" basedir=".">
	<property name="classes.dir" value="bin" />
	<property name="dist.dir" value="dist" />
	<property name="iframe.classes.dir" value="../original_classes" />
	<property name="src.dir" value="src"/>
	<property name="jar.file" value="iFrame2-ims-1.3.jar"/>
	
	<path id="classpath">
		<pathelement location="${iframe.classes.dir}" />
        <fileset dir="lib">
            <include name="*.jar"/>
        </fileset>
	</path>
	
	<target name="init">
		<mkdir dir="bin"/>
		<mkdir dir="dist"/>
	</target>

	<target name="clean">
		<delete dir="bin"/>
		<delete dir="dist"/>
	</target>

	<!--
		Compiles the java source files 
		of the test application.
	-->
	<target name="compile" depends="init">
	    <copy todir="${classes.dir}">
	        <fileset dir="${iframe.classes.dir}">
	            <include name="**/*.class"/>
	            <exclude name="**/SmartColumnComponent.class"/>
	        </fileset>
	    </copy>
        <javac srcdir="${src.dir}" destdir="${classes.dir}" debug="true" optimize="false" deprecation="false">
      			<classpath refid="classpath"/>
      		</javac>
	</target>
	
	<!-- Prepare the iFrame2.jar for deployment -->
	<target name="jar" depends="compile">
		<jar destfile="${dist.dir}/${jar.file}" basedir="${classes.dir}">
			<include name="**/*.class"/>
		</jar>
	</target>	
</project>
