<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
		"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
		"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>

	<session-factory name="MyFactory">
		<property name="hibernate.connection.username">${jdbc.user}</property>
		<property name="hibernate.connection.password">${jdbc.password}</property>
		<property name="hibernate.dialect">${hibernate.dialect}</property>
		<property name="hibernate.connection.url">${jdbc.url}</property>
		<property name="hibernate.connection.driver_class">${jdbc.driver}</property>
		<property name="hibernate.default_schema">${jdbc.schema}</property>
	</session-factory>

</hibernate-configuration>
